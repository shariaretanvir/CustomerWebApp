@page
@model CustomerApp.UI.Pages.CustomersModel
@{
}

<h2>Customer List</h2>
<a class="btn btn-primary" asp-page="./Add">Add Customer</a>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>IsActive</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.name</td>
                    <td>@customer.age</td>
                    <td>@customer.isActive</td>
                    <td>
                        <a asp-page="./EditCustomer" asp-route-id="@customer.id" asp-route-name="@customer.name"
                           asp-route-age="@customer.age" asp-route-isActive="@customer.isActive" class="btn btn-info">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@customer.id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
